                                <div >
                                    @Html.ActionLink("Upravit",
                                        "CheckIn",
                                        "Parking",
                                        new { pPlaceId = reservation.ParkingPlaceId,
                                            reservationId = reservation.Id},
                                        new { @class = "nav-link odkaz-prijezd" })
                                </div>
                                <div style="text-align:center">
                                    @Html.ActionLink("Check In",
                                        "CheckIn",
                                        "Parking",
