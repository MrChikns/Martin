@model HotelGarage.Models.Reservation
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create Reservation</h2>
@using (Html.BeginForm("Create", "Reservations"))
{
    <div class="form-group">
        @Html.LabelFor(r => r.CarId)
        @Html.TextBoxFor(r => r.CarId, new { @class = "form-control", autofocus = "autofocus" })
        @Html.ValidationMessageFor(r => r.CarId)
    </div>
    <div class="form-group">
        @Html.LabelFor(r => r.Arrival)
        @Html.TextBoxFor(r => r.Arrival, new { @class = "form-control" })
        @Html.ValidationMessageFor(r => r.Arrival)
    </div>
    <div class="form-group">
        @Html.LabelFor(r => r.Departure)
        @Html.TextBoxFor(r => r.Departure, new { @class = "form-control" })
        @Html.ValidationMessageFor(r => r.Departure)
    </div>    
    <div class="form-group">
        @Html.LabelFor(r => r.IsRegistered)
        @Html.CheckBoxFor(r => r.IsRegistered, new { @class = "form-control" })
        @Html.ValidationMessageFor(r => r.IsRegistered)
    </div>
    <button type="submit" class="btn btn-primary">Save</button>

}
@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}




