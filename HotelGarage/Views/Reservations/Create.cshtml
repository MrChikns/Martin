@model HotelGarage.Models.Reservation
@{
    ViewBag.Title = "Nová rezervace";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Nová rezervace</h2>
<br />
@using (Html.BeginForm("Create", "Reservations"))
{
    @Html.AntiForgeryToken();
    <div class="form-group">
        @Html.LabelFor(r => r.LicensePlate, "Státní Poznávací Značka")
        @Html.TextBoxFor(r => r.LicensePlate, new { @class = "form-control", autofocus = "autofocus" })
        @Html.ValidationMessageFor(r => r.LicensePlate)
    </div>
    <div class="form-group">
        @Html.ActionLink("Nové Auto", "Create", "Cars", new { Cars = Model }, new { type = "submit", @class = "btn btn-primary" })
    </div>
    <div class="form-group">
        @Html.LabelFor(r => r.Arrival, "Příjezd")
        @Html.TextBoxFor(r => r.Arrival, new { @class = "form-control", type = "datetime-local",
            @Value = DateTime.Now.ToString("yyyy-MM-ddTHH:mm")})
        @Html.ValidationMessageFor(r => r.Arrival)
    </div>
    <div class="form-group">
        @Html.LabelFor(r => r.Departure, "Odjezd")
        @Html.TextBoxFor(r => r.Departure, new { @class = "form-control", type = "datetime-local",
            @Value = DateTime.Now.AddDays(1).ToString("yyyy-MM-ddT12:00")})
        @Html.ValidationMessageFor(r => r.Departure)
    </div>
    <div class="form-group form-inline">
        @Html.LabelFor(r => r.IsRegistered, "Je Registrovaná?")
        @Html.CheckBoxFor(r => r.IsRegistered, new { @class = "form-control" })
        @Html.ValidationMessageFor(r => r.IsRegistered)
    </div>
    <button type="submit" class="btn btn-primary">Uložit</button>
}


@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}




