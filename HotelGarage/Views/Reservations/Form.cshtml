@model HotelGarage.Models.Reservation
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4>@((Model.Id == 0) ? "Nová Rezervace" : "Upravit Rezervaci")</h4>
@using (Html.BeginForm("Save", "Reservations"))
{
    @Html.AntiForgeryToken()
    <div class="form-group">
        @Html.LabelFor(c => c.LicensePlate, "Státní Poznávací Značka")
        @Html.TextBoxFor(c => c.LicensePlate, new { @class = "form-control SPZbox", autofocus = "autofocus", data_id = "spz-visible", placeholder = "Doplňte SPZ nebo jméno", maxlength = 20 })
        @Html.ValidationMessageFor(c => c.LicensePlate)
    </div>
    <div class="form-group">
        @Html.TextBoxFor(c => c.Car.LicensePlate, new { @class = "form-control", data_id = "spz-hidden", style = "display:none;" })
        @Html.TextBoxFor(c => c.ParkingPlaceId, new { @class = "form-control", @Value = Model.ParkingPlaceId, style = "display:none;" })
        @Html.TextBoxFor(c => c.Id, new { @class = "form-control", @Value = Model.Id, style = "display:none;" })
        @Html.TextBoxFor(c => c.StateOfReservationId, new { @class = "form-control", @Value = Model.StateOfReservationId, style = "display:none;" })
    </div>
    <div class="form-group">
        @Html.LabelFor(r => r.Arrival, "Příjezd")
        @Html.TextBoxFor(r => r.Arrival, (Model.StateOfReservationId == 2 ||
            Model.StateOfReservationId == 5) ? // kontrola zda je rezervace najezdova anebo vyjeta pobytova
            (object)new { @class = "form-control", type = "datetime-local",
                @Value = Model.Arrival.ToString("yyyy-MM-ddTHH:mm"),
                @readonly = "readonly"
            } :
            (object)new { @class = "form-control", type = "datetime-local",
                @Value = Model.Arrival.ToString("yyyy-MM-ddTHH:mm")})
        @Html.ValidationMessageFor(r => r.Arrival)
    </div>
    <div class="form-group">
        @Html.LabelFor(r => r.Departure, "Odjezd")
        @Html.TextBoxFor(r => r.Departure, new { @class = "form-control", type = "datetime-local",
            @Value = Model.Departure.ToString("yyyy-MM-ddT12:00")})
        @Html.ValidationMessageFor(r => r.Departure)
    </div>
    <div class="form-group form-inline" id="isRegisteredDiv">
        @Html.LabelFor(r => r.IsRegistered, "Je Registrovaná?")
        @Html.CheckBoxFor(r => r.IsRegistered, (Model.StateOfReservationId == 2?
        (object)new { @class = "form-control" }: (object)new { @class = "form-control", @disabled = "disabled" }))
        @Html.ValidationMessageFor(r => r.IsRegistered)
    </div>
    <div class="form-group">
        @Html.LabelFor(c => c.Car.CarModel, "Typ Auta")
        @Html.TextBoxFor(c => c.Car.CarModel, new { @class = "form-control", maxlength = 50 })
        @Html.ValidationMessageFor(c => c.Car.CarModel)
    </div>
    <div class="form-group">
        @Html.LabelFor(c => c.Car.GuestsName, "Jméno Hosta")
        @Html.TextBoxFor(c => c.Car.GuestsName, new { @class = "form-control", maxlength = 50 })
        @Html.ValidationMessageFor(c => c.Car.GuestsName)
    </div>
    <div class="form-group">
        @Html.LabelFor(c => c.Car.GuestRoomNumber, "Číslo Pokoje Hosta")
        @Html.TextBoxFor(c => c.Car.GuestRoomNumber, new { @class = "form-control", maxlength = 3 })
        @Html.ValidationMessageFor(c => c.Car.GuestRoomNumber)
    </div>
    <div class="form-group">
        @Html.LabelFor(c => c.Car.PricePerNight, "Cena za Noc v EUR")
        @Html.TextBoxFor(c => c.Car.PricePerNight, new { @class = "form-control", maxlength = 3 })
        @Html.ValidationMessageFor(c => c.Car.PricePerNight)
    </div>
    <div class="form-group">
        @Html.LabelFor(c => c.Car.Note, "Poznámka")
        @Html.TextAreaFor(c => c.Car.Note, new { @class = "form-control", maxlength = 100, Rows = 5, style = "resize:none;" })
        @Html.ValidationMessageFor(c => c.Car.Note)
    </div>
    <div class="form-group form-inline">
        @Html.LabelFor(c => c.Car.IsEmployee, "Zaměstnanec?")
        @Html.CheckBoxFor(c => c.Car.IsEmployee, new { @class = "form-control" })
        @Html.ValidationMessageFor(c => c.Car.IsEmployee)
    </div>
    <div class="row">
        <input type="button" value="Zrušit" class="btn btn-outline-primary mx-3" onclick='location.href="@Url.Action("Parking", "Parking")"'>
        <button type="submit" class="btn btn-primary js-res-save-btn">Uložit</button>
    </div>
}

@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        $(document).ready(function () {
            ReservationForm.init();
        });
    </script>
}




